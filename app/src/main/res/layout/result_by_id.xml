            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Propagation Details"
            android:textStyle="bold"
            android:layout_centerHorizontal="false"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            android:layout_below="@id/textHealth"/>
        <TextView
            android:id="@+id/textPropagation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/propagationLabel"
            android:layout_centerHorizontal="false"
            android:layout_marginStart="5dp"
            android:text="Other Names Loco laboris nisi ut aliquip ex ea commodo consequat." />
        <TextView
            android:id="@+id/climateLabel"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Climate Conditions"
            android:textStyle="bold"
            android:layout_centerHorizontal="false"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            android:layout_below="@id/textPropagation"/>
    <TextView
        android:id="@+id/textClimate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/climateLabel"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="5dp"
        android:text="Other Names quat." />


</RelativeLayout>